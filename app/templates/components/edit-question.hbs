<h3>Edit question:</h3>
   <div>
     <form>
       <div class="form-group">
         <label for="author">Author</label>
         {{input value=author id="questionAuthor"}}
       </div>

       <div class="form-group">
         <label for="details">Question: </label>
         {{input value=text id="questionText"}}
       </div>

       <div class="form-group">
         <label for="notes">Details: </label>
         {{input value=notes id="notes"}}
       </div>

       <button {{action 'editQuestion'}}>Save</button>
     </form>
   </div>
